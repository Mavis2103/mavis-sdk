{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "clean": {},
    "test": {},
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "@mavis-sdk/lucid#test": {
      "dependsOn": ["@mavis-sdk/provider#test"]
    }
  }
}
